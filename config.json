{
  "source": ["./src/tokens/*.json"],
  "platforms": {
    "js": {
      "transforms": ["name/cti/camel"],
      "transformGroup": "js",
      "buildPath": "./src/theme/",
      "files": [
        {
          "destination": "variables.js",
          "format": "javascript/es6"
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "prefix": "sd",
      "buildPath": "./src/theme/",
      "files": [
        {
          "destination": "_variables.css",
          "format": "css/variables"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "prefix": "sd",
      "buildPath": "./src/theme/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables"
        }
      ]
    }
  }
}
